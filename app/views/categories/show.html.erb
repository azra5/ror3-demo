<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @category.description %>
</p>

<%= link_to 'Edit', edit_category_path(@category), class: "btn btn-primary" %> |
<%= link_to 'All categories', categories_path %>

<h3>Products</h3>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Seller</th>
      <th>Category</th>
      <th>Created at</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to product.seller.name, seller_path(product.seller_id) %></td>
        <td><%= link_to product.category.name, category_path(product.category_id) %></td>
        <td><%= product.created_at.strftime("%F") %></td>
        <td><%= link_to 'Edit', edit_product_path(product),  class: "btn btn-primary" %>
        <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
